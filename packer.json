{
  "variables": {
    "ami_name": "{{env `DEFN_PACKER_AMI_NAME`}}",
    "aws_region": "{{env `AWS_DEFAULT_REGION`}}",
    "filters_name": "{{env `DEFN_PACKER_FILTERS_NAME`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{user `filters_name`}}",
          "root-device-type": "ebs",
          "architecture": "x86_64"
        },
        "owners": [
          "self"
        ],
        "most_recent": true
      },
      "instance_type": "c4.large",
      "spot_price": "auto",
      "ssh_username": "ec2-user",
      "ssh_interface": "public_ip",
      "ami_name": "{{user `ami_name`}}",
      "tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "run_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "run_volume_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "snapshot_tags": {
        "Name": "{{user `ami_name`}}",
        "ManagedBy": "Packer"
      },
      "ami_description": "defn Home",
      "associate_public_ip_address": "true"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "script/001-efs",
        "script/003-sysdig",
        "script/004-netdata",
        "script/005-zerotier",
        "script/999-update"
      ]
    }
  ]
}
